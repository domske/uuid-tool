{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "lib": ["ES2015"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist",
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
